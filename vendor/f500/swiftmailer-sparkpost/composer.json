{
  "name": "f500/swiftmailer-sparkpost",
  "description": "A SwiftMailer transport implementation for the SparkPost API.",
  "keywords": ["swiftmailer", "mailer", "mail", "transport", "sparkpost", "api"],
  "type": "library",
  "license": "MIT",
  "authors": [
    { "name": "Jasper N. Brouwer", "email": "jasper@future500.nl" }
  ],

  "require": {
    "guzzlehttp/guzzle": "^6.0",
    "php-http/guzzle6-adapter": "^1.1",
    "sparkpost/sparkpost": "^2.0",
    "swiftmailer/swiftmailer": "^5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.7"
  },

  "autoload": {
    "psr-4": {
      "SwiftSparkPost\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SwiftSparkPost\\Tests\\": "tests/"
    }
  }
}
